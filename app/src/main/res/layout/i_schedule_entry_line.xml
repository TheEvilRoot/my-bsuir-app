<?xml version="1.0" encoding="utf-8"?>
<pl.hypeapp.materialtimelineview.MaterialTimelineView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeline_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:timeline_top_radio_color="@color/colorAccent"
    app:timeline_bottom_radio_color="@color/colorAccent"
    app:timeline_line_color="@color/colorPrimaryDark"
    app:timeline_radio_outline_radius="20"
    app:timeline_radio_radius="12"
    app:timeline_type="line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/schedule_line_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            tools:text="Schedule Entry"/>


        <TextView
            android:id="@+id/schedule_line_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_line_top"
            android:textColor="@android:color/black"
            android:layout_marginVertical="4dp"
            tools:text="Schedule Entry"/>


        <TextView
            android:id="@+id/schedule_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_line_title"
            android:textColor="@android:color/black"
            tools:text="Schedule Entry"/>
    </RelativeLayout>

</pl.hypeapp.materialtimelineview.MaterialTimelineView>
