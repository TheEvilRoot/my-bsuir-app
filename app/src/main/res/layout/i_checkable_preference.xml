<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/b_block"
    android:layout_margin="4dp"
    android:elevation="1dp">

    <TextView
        android:id="@+id/preference_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/access_preference_job"/>

    <com.theevilroot.mybsuir.common.api.views.SquareImageView
        android:id="@+id/preference_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="42dp"
        android:tint="@color/colorPrimaryDark"
        tools:src="@drawable/ic_round_visibility_24"/>

</RelativeLayout>