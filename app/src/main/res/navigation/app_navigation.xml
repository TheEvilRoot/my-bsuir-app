<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/fragment_profile">
    <fragment
        android:id="@+id/fragment_profile"
        android:name="com.theevilroot.mybsuir.profile.FragmentProfile"
        tools:layout="@layout/f_profile"
        android:label="Profile" />

    <action
        android:id="@+id/open_login"
        app:destination="@id/dialog_login"
        app:enterAnim="@anim/fragment_close_enter"
        app:exitAnim="@anim/fragment_close_exit"/>

    <fragment
        android:id="@+id/dialog_login"
        android:name="com.theevilroot.mybsuir.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/f_login" />

</navigation>